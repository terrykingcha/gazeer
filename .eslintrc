{
  "root": true,
  "extends": "eslint:recommended", // @see http://eslint.org/docs/rules/

  "env": {                         // @see http://eslint.org/docs/user-guide/configuring
    "node": true,
    "es6": true,
    "commonjs": true
  },

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": false,
      "impliedStrict": false,
      "jsx": false,
      "experimentalObjectRestSpread": false
    }
  },

  "rules": {
    "no-console": 0
  }
}